<VirtualHost *:80>
  ServerName {{ domain }}
  DocumentRoot {{ ansible_env.HOME }}/geonature/frontend/dist

  Alias /geonature {{ ansible_env.HOME }}/geonature/frontend/dist
  <Directory {{ ansible_env.HOME }}/geonature/frontend/dist>
    Require all granted
  </Directory>
  <Location /geonature/api>
    ProxyPass http://127.0.0.1:8000
    ProxyPassReverse  http://127.0.0.1:8000
  </Location> 

  ErrorLog ${APACHE_LOG_DIR}/{{ domain }}-error.log
  CustomLog ${APACHE_LOG_DIR}/{{ domain }}-access.log combined
</VirtualHost>

